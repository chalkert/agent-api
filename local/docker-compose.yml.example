version: "3"

services:
  database:
    image: postgres:9.6.15-alpine
    environment:
      POSTGRES_DB: ${DB_NAME}
      POSTGRES_PASSWORD: ${PG_PASSWORD}
    volumes:
      - ./src/test/resources/init-agent-module.sql:/docker-entrypoint-initdb.d/1-init-schema.sql

  agent-api:
    build: .
    restart: always
    ports:
      - "8082:8080"
    environment:
      spring.datasource.url: ${SPRING_DATASOURCE_URL}
      spring.datasource.username: ${SPRING_DATASOURCE_USER}
      spring.datasource.password: ${SPRING_DATASOURCE_PASSWORD}
      spring.liquibase.user: ${LIQUIBASE_USER}
      spring.liquibase.password: ${LIQUIBASE_PASSWORD}
# Start with: docker-compose up --build --force-recreate --no-deps
# Stop with: docker-compose down
